@page
@model MultiCulturalBlog.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!-- Blog content -->
<div class="col-md-9 blogpost">
    <a class="btn btn-success" href="/Blog/Create">Create New</a>
    <div class="space10"></div>
        @foreach (var blog in Model.LatestBlogs)
        {
            <article class="post">
                <div class="post-thumb">
                    <img src="@blog.PhotoUrl" width="690" height="310" class="img-responsive" alt="img">
                    <div class="overlay-wrap">
                        <div class="overlay">
                            <div class="overlay-inner">
                                <a href="/Blog/Details/@blog.Id"><i class="fa fa-plus"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <h3><a href="/Blog/Details/@blog.Id">@blog.Title</a></h3>
                <div class="blog-meta"><span><i class="fa fa-user"></i> Admin</span> <span><i class="fa fa-clock-o"></i> @blog.CreationDate.ToString("s")</span> </div>
                <p>@blog.Body</p>
            </article>
        }



    </div>
    <!-- Sidebar -->
    <aside class="col-md-3">
        <div class="side-widget">
            <h5>Archives</h5>
            <ul class="side-list">
                <li><a href="#">&rarr; December 2014 <span>(23)</span></a></li>
                <li><a href="#">&rarr; November 2014 <span>(29)</span></a></li>
                <li><a href="#">&rarr; October 2014 <span>(31)</span></a></li>
                <li><a href="#">&rarr; September 2014 <span>(14)</span></a></li>
                <li><a href="#">&rarr; August 2014 <span>(44)</span></a></li>
                <li><a href="#">&rarr; July 2014 <span>(27)</span></a></li>
                <li><a href="#">&rarr; June 2014 <span>(18)</span></a></li>
            </ul>
        </div>

        <div class="space60"></div>

        <div class="side-widget">
            <h5>Popular Tags</h5>
